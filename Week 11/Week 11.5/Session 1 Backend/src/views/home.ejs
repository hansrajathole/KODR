<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Photo Grid</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-900">
    <!-- Navigation Bar -->
    <nav class="fixed top-0 z-50 p-4 w-full bg-black">
        <div class="flex justify-between items-center mx-auto max-w-7xl">
            <h1 class="text-xl font-bold text-white">PhotoGrid</h1>
            <a href="/create-post" class="px-4 py-2 text-white bg-gray-800 rounded-md transition duration-300 hover:bg-gray-700">
                Create Post
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="px-4 pt-20 mx-auto max-w-7xl">
        <!-- Grid Layout -->
        <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
           <% posts.forEach(post => {  %>
                <div class="relative aspect-square group">
                    <img 
                        src="<%= post.mediaImage  %>" 
                        alt=""
                        class="object-cover w-full h-full"
                    >
                    <!-- Hover Overlay -->
                    <div class="flex absolute inset-0 justify-center items-center bg-black bg-opacity-50 opacity-0 transition duration-300 group-hover:opacity-100">
                        <p class="p-4 text-center text-white"><%= post.caption %></p>
                    </div>
                </div>
              <% });  %>
        </div>
    </main>
</body>
</html>