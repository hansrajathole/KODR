<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta
        name="viewport"
        content="width=device-width, initial-scale=1.0"
    >
    <title>Document</title>

    <style>
        * {
            margin: 0%;
            padding: 0%;
            box-sizing: border-box;
        }

        html,
        body {
            height: 100%;
            width: 100%;
        }

        html {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }

        .cards {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .card {
            width: 300px;
            border: 1px solid black;
            margin: 10px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        img {
            width: 100%;
            height: 100%;
            max-height: 300px;
            object-fit: cover;
        }

    </style>

</head>
<body>
    <a href="/create-post"> create post </a>


    <div class="cards">



        <% posts.forEach(post =>{ %>

        <div class="card">
            <img
                src="<%= post.mediaImage %>"
                alt=""
            >
            <h1><%= post.caption %></h1>

            <a href="/like/<%= post._id %>">
                <button>
                    <p> likes : <%= post.likeCount %> </p>

                </button>
            </a>

        </div>

        <% }) %>
    </div>

</body>
</html>
